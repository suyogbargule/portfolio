{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "semi": 2,
    "indent": ["error", 2],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "react/no-unescaped-entities": "off",
    "no-console": "off",           // Disable console error
    "no-unused-vars": "warn",      // Turn unused vars into warnings
    "no-undef": "off"              // Temporarily disable undefined variables
  }
}
